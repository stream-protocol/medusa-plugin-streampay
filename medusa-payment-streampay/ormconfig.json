{
    "type": "postgres",
    "host": "localhost", // Your PostgreSQL host
    "port": 5432, // Your PostgreSQL port
    "username": "your_username",
    "password": "your_password",
    "database": "your_database_name",
    "synchronize": false, // Set to true for development, but false for production
    "logging": true, // Set to true to log queries (optional)
    "entities": ["src/**/*.entity.ts"], // Replace with your entity paths
    "migrations": ["src/migration/**/*.ts"], // Replace with your migration paths
    "subscribers": ["src/subscriber/**/*.ts"], // Replace with your subscriber paths
    "cli": {
        "entitiesDir": "src/entity", // Replace with your entity directory
        "migrationsDir": "src/migration", // Replace with your migration directory
        "subscribersDir": "src/subscriber" // Replace with your subscriber directory
    }
}